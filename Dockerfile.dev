ARG RUBY_VERSION=3.4.1
FROM ruby:$RUBY_VERSION-slim

# Install system dependencies
RUN apt-get update -qq && apt-get install -y --no-install-recommends \
  build-essential libpq-dev \
  && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Create a non-root user
RUN groupadd --system --gid 1000 rails && \
  useradd --system --uid 1000 --gid 1000 --create-home --shell /bin/bash rails

# Copy Gemfile first for caching and install gems
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copy the entire application code
COPY . .

# Ensure necessary directories exist and are writable
RUN mkdir -p tmp log storage && chown -R rails:rails tmp log storage

# Use non-root user
USER rails

# Default command: Start the Rails server
CMD ["bin/rails", "server", "-b", "0.0.0.0"]
